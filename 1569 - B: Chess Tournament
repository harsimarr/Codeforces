#define ordered_set tree<int, null_type,less<int>, rb_tree_tag,tree_order_statistics_node_update>
 
#define faster  ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
 
#define sq(x)   (x)*(x)
#define PI      acos(-1.0)
#define all(x) x.begin(),x.end()
#define nl      '\n'
 #define mod 1000000007
typedef long long int ll;
typedef unsigned long long int  llu;
 
// PRIME NUMBER TEST//
bool prime(int n)
{
    if(n<2)return false;
    if(n<=3)return true;
    if(n%2==0)return false;
    for(int i=3;i*i<=n;i+=2)
    {
        if(n%i==0)return false;
    }
    return true;
}
 
// Graph Grid //
int dx[]={-1,0,1,0};
int dy[]={0,1,0,-1};
 
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string s;
        cin>>s;
        char ans[n+3][n+3];
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                ans[i][j]='=';
                if(i==j)ans[i][j]='X';
            }
        }
        vector<int>v;
        for(int i=0;i<n;i++)
        {
            if(s[i]=='2')v.push_back(i);
 
        }
        if(v.size()==1 || v.size()==2)
        {
            cout<<"NO"<<endl;
        }
        else{
            cout<<"YES"<<endl;
            for(int i=0;i<v.size();i++)
            {
                int v1,v2;
                v1=i;
                v2=i+1;
                if(v2==v.size())v2=0;
                v1=v[v1];
                v2=v[v2];
                ans[v1][v2]='+';
                ans[v2][v1]='-';
            }
            for(int i=0;i<n;i++)
            {
                for(int j=0;j<n;j++)cout<<ans[i][j];
                cout<<endl;
            }
        }
    }
}
